# EcoMarket Admin Dashboard - Environment Configuration  
# Copy this file to .env and update with your values

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8001/api/v1
REACT_APP_USER_SERVICE_URL=http://localhost:8001
REACT_APP_PRODUCT_SERVICE_URL=http://localhost:8002
REACT_APP_ORDER_SERVICE_URL=http://localhost:8003
REACT_APP_PAYMENT_SERVICE_URL=http://localhost:8004
REACT_APP_INVENTORY_SERVICE_URL=http://localhost:8005
REACT_APP_ANALYTICS_SERVICE_URL=http://localhost:8006

# Authentication
REACT_APP_AUTH_SECRET=your-admin-secret-here-change-in-production
REACT_APP_JWT_SECRET=your-jwt-secret-for-admin

# Admin Features
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_REPORTS=true
REACT_APP_ENABLE_USER_MANAGEMENT=true
REACT_APP_ENABLE_INVENTORY_MANAGEMENT=true
REACT_APP_ENABLE_ORDER_MANAGEMENT=true

# Development Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false
REACT_APP_LOG_LEVEL=warn

# Third-party Services
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
REACT_APP_ANALYTICS_TRACKING_ID=UA-XXXXXXX-X

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
REACT_APP_UPLOAD_ENDPOINT=/api/upload

# UI Configuration
REACT_APP_THEME=light
REACT_APP_ITEMS_PER_PAGE=20
REACT_APP_ENABLE_DARK_MODE=true

# Proxy for development (CRA built-in proxy)
# This is configured in package.json as "proxy": "http://localhost:3001"
